<src:CenterWindow x:Class="TheUI.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:src="clr-namespace:TheUI"
        mc:Ignorable="d"
        Height="200" Width="300" Title="Info">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Bottom" Margin="20" HorizontalAlignment="Center">
            <Button Width="50" Click="BtnOk_Click">OK</Button>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="TbxMsg" Padding="20" FontSize="16" TextWrapping="WrapWithOverflow"/>
        </WrapPanel>
    </DockPanel>
</src:CenterWindow>
