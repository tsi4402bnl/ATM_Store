<Window x:Class="TheUI.ItemImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Picture" Height="500" Width="430">

    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <WrapPanel>
                <Image Width="100" Height="100" Margin="10" Stretch="Fill" Source="{Binding Image}"/>
            </WrapPanel>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <ListView Name ="ImageListView" ItemTemplate="{StaticResource ItemTemplate}" ItemsSource="{Binding Data}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="3" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</Window>